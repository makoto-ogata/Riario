<div class="row">
<div class="col-md-8">
<div class="page-header">
  <h1>記事一覧</h1>
</div>
</div>
</div>

<div class="row">
<div class="col-md-8">
<% @nikkis.each do |nikki| %>
  <div class="postcell">
  <%= link_to(nikki) do %>
  <div class="title"><%= nikki.created_at.strftime("%Y-%m-%d %H:%M:%S") %>  <%= nikki.title %></div>
  <% end %>
  </div>
<% end %>
</div>

<div class="col-md-4">
<%= link_to '日記を書く', new_nikki_path, class: 'btn btn-success btn-block' %>
</div>
</div>
