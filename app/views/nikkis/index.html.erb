<div class="row">
<div class="col-md-8">
<div class="page-header">
  <h1>記事一覧</h1>
</div>
</div>
</div>

<div class="row">
<div class="col-md-8">
<% @nikkis.each do |nikki| %>
<%= link_to(nikki) do %>
<table class="contents">
  <tbody>
    <tr>
      <th><%= nikki.created_at.strftime("%Y-%m-%d") %></th>
      <td><%= nikki.title %></td>
    </tr>
  </tbody>
</table>
<% end %>
<% end %>
</div>

<div class="col-md-4">
<%= link_to '日記を書く', new_nikki_path, class: 'btn btn-success btn-block' %>
</div>
</div>
